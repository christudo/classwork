<h1>{{genre.name}}</h1>

{{#if genre}}
  <p>Genre: {{genre.name}}</p>
{{/if}}

<!-- Display the associated books -->
{{#if books.length}}
  <h2>Books in {{genre.name}}</h2>
  <ul>
    {{#each books}}
      <li>{{this.title}} (Published in {{this.publishingYear}})</li>
    {{/each}}
  </ul>
{{else}}
  <p>No books found for this genre.</p>
{{/if}}
